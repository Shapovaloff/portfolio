  ]



section.last-works#last-works
  .last-works__contaner.container(data-card-view="parent")
    h2.last-works__title.title.title--h2 Последние работы

    .last-works__nav
      .protfolio-cards__navigation(data-filter="navigation")
        +custom-select({class: "custom-select--slide-up", id: "id-example-2", label: "label-2", name: "name-example-2", error: "some-error", options: [{text: "Все работы", value: "all", isActive: true}, {text: "Учебные", value: "educational"}, {text: "Реальные проекты", value: "real"}, {text: "React", value: "react"}]})


        //- each buttonItem, index in buttonList
        //-   if (index === 0)
        //-     button(type="button", data-category-nav=buttonItem.filter).protfolio-cards__controll.button.button--opacity.button--no-bg.active=buttonItem.text
        //-   else
        //-     button(type="button", data-category-nav=buttonItem.filter).protfolio-cards__controll.button.button--opacity.button--no-bg=buttonItem.text

      .last-works__card-view
        button(type="button", data-card-view="button", data-card-setting="compact").last-works__control.active.button
          +icon("icon-layout-horizontal", 24, 24)
        button(type="button", data-card-view="button", data-card-setting="tile").last-works__control.button
          +icon("icon-layout-grid", 24, 24)

    ul(data-card-view="list", data-load-more="list", data-filter="container").cards-work
      each worksItem, index in worksList
        - var isHide = index > 2 ? 'hide' : ''

        li.cards-work__item(class=worksItem.class, class=isHide, data-category=worksItem.category, data-load-more="item")
          .cards-work__container
            .cards-work__info
              h3.cards-work__title.title.title--h3=worksItem.title
              p.cards-work__descr!=worksItem.descr
            .cards-work__btn-block
              a(href=worksItem.linkSite, target="_blank", rel="nofollow").cards-work__link.button.button--primary
                span Перейти на сайт
                +icon("icon-arrow-right-top", 24, 24)

              if (worksItem.linkCase)
                a(href=worksItem.linkCase, target="_blank", rel="nofollow").cards-work__link.button.button--opacity
                  span Читать кейс
                  +icon("icon-arrow-right", 24, 24)

          .cards-work__img-block.cards-work__img-block--compact
            picture
              source(media="(max-width: 767px)", srcset="img/cards-work/" + worksItem.nameSrc + "-mobile@1x.png 1x, img/cards-work/" + worksItem.nameSrc + "-mobile@2x.png 2x")
              img(src="img/cards-work/" + worksItem.nameSrc + "@1x.png", srcset="img/cards-work/" + worksItem.nameSrc + "@2x.png 2x", alt=worksItem.title, width="700", height="400")
          .cards-work__img-block.cards-work__img-block--tile
            .cards-work__container-img
              picture
                img(src="img/card-list/"+ worksItem.nameSrc +"@1x.png", srcset="img/card-list/"+ worksItem.nameSrc +"@2x.png 2x" alt=worksItem.title)

    button(data-load-more="btn").last-works__link.button.button--opacity.button--no-bg
      span Показать ещё
      +icon("icon-update", 24, 24)
